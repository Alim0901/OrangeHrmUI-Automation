<configuration>
    <Url>https://opensource-demo.orangehrmlive.com/</Url>
    <browser>chrome</browser>
    <headless>true</headless>
    <!-- window size is used when run on headless mode, otherwise will maximise to screen resolution -->
    <window>desktop</window>
    <ScreenShotOnFail>true</ScreenShotOnFail>
    <ScreenShotOnPass>true</ScreenShotOnPass>
    <ReportingTool>allure</ReportingTool>
    <!--✅ Control the report via:
* mvn verify -DrunAllure=true → Allure report
* mvn verify (default to HTML) → HTML report -->
</configuration>
